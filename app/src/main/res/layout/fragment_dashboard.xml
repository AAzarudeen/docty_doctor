<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DashboardFragment"
    android:orientation="vertical"
    android:background="@drawable/background_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/profile"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="24sp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/nats"
            android:textColor="@color/white"
            android:lineHeight="10dp"
            android:layout_toEndOf="@id/profileCard"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hello"
            android:layout_alignStart="@+id/hello"
            android:text="Mo"
            android:textColor="@color/white"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/nats"
            android:textSize="20sp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/connect_card"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/gradient_dark_light_blue">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:fontFamily="@font/nats"
    android:textSize="24sp"
    android:textColor="@color/white"
    android:lineSpacingExtra="-20dp"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    android:text="Share your unique code with your patients to connect with you"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shareCode"
            style="@style/btn_style"
            android:layout_gravity="bottom|center"
            android:text="Share code"
            android:textSize="16sp"
            android:layout_margin="15dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patients"
        style="@style/page_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patient_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>